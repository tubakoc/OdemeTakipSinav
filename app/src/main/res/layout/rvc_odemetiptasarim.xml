    <TextView
        android:id="@+id/tipTarih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tipBaslik" />

    <TextView
        android:id="@+id/tipTutar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/tipTarih"
        app:layout_constraintStart_toEndOf="@+id/tipTarih"
        app:layout_constraintTop_toTopOf="@+id/tipTarih" />

